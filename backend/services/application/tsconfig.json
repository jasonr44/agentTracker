{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src/"
  },
  "exclude": ["node_modules"]
}
